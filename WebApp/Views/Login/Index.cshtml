@model CodeTracker.Models.User.EndUser
@{
    Layout = null;
}

<style>
    .m-1per {
        margin: auto 0;
    }

    .bdr-1px-solid-black {
        border: 1px solid black;
    }

    .center-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh; /* Full height */
    }

    table {
        width: 100%;
        border-collapse: separate;
        /*border-spacing: 0 5px; *//* Adds vertical spacing */
    }

    td {
        padding-bottom: 5px;
    }

    .form-control {
        width: 100%;
    }

    .btn-primary {
        width: 100%;
    }
</style>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">

<div class="bdr-1px-solid-black" style="background-color: cyan">
    <div class="m-1per">
        <div class="center-container form-group">
            <div style="background-color: lightcyan; padding: 25px; border-radius: 10px;">
                <table>
                    @*<tr>
                        <td colspan="2" style="font-size:25px; font-weight:bold; text-align:center; padding: 10px;">
                            Code Tracker
                        </td>
                    </tr>*@
                    <tr>
                        <td colspan="2">
                            @Html.TextBoxFor(model => model.EndUserUsername, new { @class = "form-control", @placeholder = "Enter username" })
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2">
                            @Html.TextBoxFor(model => model.EndUserPassword, new { @class = "form-control", @placeholder = "Enter password" })
                        </td>
                    </tr>
                    <tr>
                        <td colspan="2" style="text-align:center">
                            <button class="btn btn-primary" type="submit">Login</button>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>